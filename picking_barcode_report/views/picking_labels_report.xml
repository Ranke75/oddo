<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <template id="report_picking_barcode_labels">
            <t t-foreach="doc_ids" t-as="doc">
                <div class="page" style="margin-left:-15px !important;margin-right:-10px !important;margin-top:0px;margin-bottom:-10px !important;padding-bottom:-25px important;">
                     <div class="row">
                        <t t-set="product" t-value="request.env['product.product'].browse(doc.get('product_id'))"/>
                        <div class="col-xs-5 text-bottom" t-if="data['form']['barcode']" style="color:black;font-size:8px;">
                            <div>
                                <span t-raw="get_barcode_string(product[0], data)" />
                            </div>
                        </div>
                        <div class="col-xs-6 text-bottom mt8">
                            <div class="row" t-if="data['form']['product_code']" 
                                style="color:black;font-size:10px;border-bottom: 1px solid black;">
                                <div class="mt4">
                                    <span>PN: </span><b><span style="font-size:14px" t-field="product.default_code"/></b>
                                </div>
                                <div class="watermark" style="position:absolute;opacity:0.1;font-size:3em;height:80%;width:80%;text-align:center;z-index:1000;right:35px;border:0;top:4px">
                                    <img style="width:150px;height:75px;" src="picking_barcode_report/static/src/img/Tellerex_logo.png"/>
                                </div>
                            </div>
                            <div class="row" t-if="data['form']['description']" 
                                    style="color:black;font-size:10px;border-bottom: 1px solid black;">
                                <div class="mt4">
                                    <span>Desc: </span><span t-esc="product.product_tmpl_id.description_sale"/>
                                </div>
                            </div>
                            <div class="row" t-if="data['form']['quantity']" 
                                    style="color:black;font-size:8px;border-bottom: 1px solid black;">
                                <div class="mt4">
                                    <span>Qty: </span><span t-esc="doc.get('qty')"/>
                                </div>
                            </div>
                            <div class="row" t-if="data['form']['lot']" 
                                    style="color:black;font-size:8px;border-bottom: 1px solid black;">
                                <div class="mt4">
                                    <span>SN: </span><span t-esc="doc.get('lot_number')"/>
                                </div>
                            </div>
                                
                        </div>
                    </div>
               </div>
            </t>
        </template>
    </data>
</openerp>
