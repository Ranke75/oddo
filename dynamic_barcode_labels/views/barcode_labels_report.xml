<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <template id="report_barcode_labels">
            <t t-call="web.html_container">
                <t t-foreach="doc_ids" t-as="doc">
                    <t t-call="web.basic_layout">
                        <div class="page" style="margin-top:-25px !important;margin-bottom:-10px !important;padding-bottom:-25px important;margin-right:10px !important;">
                            
                        <!-- Product Record -->
                        <t t-set="product" t-value="request.env['product.product'].browse(doc.get('product_id'))"/>
                            <table class="table table-bordered row" style="">
                                <tr class="text-bottom" style="">
                                    <td>
                                        <t t-if="data['form'].get('barcode')">
                                            <div style="color:black;display: inline-block !important;">
                                                <img t-att-src="'/report/barcode/?type=%s&amp;value=%s&amp;width=%s&amp;height=%s&amp;humanreadable=%s' %(data['form'].get('barcode_type'), get_barcode_value(product[0], data), int(data['form'].get('display_width')), int(data['form'].get('display_height')), is_humanreadable(data))" style="padding-bottom:-40px !important;margin-top:25px !important;margin-bottom:-20px !important;"/>
                                                <hr style="border:none;margin-bottom: -90px !important;"/>
                                                <p style="margin-left: 100px;">
                                                    <span class="brlinew">
                                                        <!-- Product Name -->
                                                        <span style="font-size:10px;">PN: </span><b><div style="font-size:14px;margin-top:-13px !important;margin-left:122px !important;" t-field="product.name"/></b>

                                                        <!-- Watermark on Label -->
                                                        <span class="watermark" style="position:absolute;opacity:0.1;font-size:3em;height:80%;width:80%;text-align:center;z-index:1000;left:64px;border:0;top:17px">
                                                            <img style="width:120px;height:65px;" t-att-src="'data:image/png;base64,%s' % to_text(product.company_id.logo)"/>
                                                        </span>
                                                        <hr style="border: none; border-bottom: 1px solid black !important;margin-top:-1px;margin-bottom:-1px;"/>
                                                    </span>

                                                    <!-- Product Description -->
                                                    <span style="margin-left:99px;">
                                                        <div style="margin-left:99px;">
                                                        <span style="font-size:10px;">Desc: </span><div style="overflow-wrap: break-word !important;font-size:10px;margin-top:-10px !important;margin-left:30px !important;" t-esc="product.default_code"/>
                                                        <hr style="border:none;border-bottom: 1px solid black !important;margin-top:1px;margin-bottom:-1px;"/>
                                                        </div>
                                                    </span>

                                                    <!-- Product Quantity -->
                                                    <span style="margin-left:99px;">
                                                        <span style="font-size:8px;">Qty: </span><div style="font-size:8px;margin-top:-8px !important;margin-left:117px !important;" t-esc="doc.get('qty')"/>
                                                        <hr style="border:none;border-bottom: 1px solid black !important;margin-top:1px;margin-bottom:-1px;"/>
                                                    </span>

                                                    <!-- Product SERIAL No -->
                                                    <span style="margin-left:99px;">
                                                        <span style="font-size:8px;">SN: </span><div style="font-size:8px;margin-top:-9px !important;margin-left:115px !important;" t-esc="doc.get('lot_number')"/>
                                                        <hr t-if="doc.get('lot_number')" style="border:none;border-bottom: 1px solid black !important;margin-top:1px;margin-bottom:-1px;margin-left:100px !important"/>
                                                        <hr t-else="" style="border:none;border-bottom: 1px solid black !important;margin-top:9px;margin-bottom:-1px;margin-left:100px !important"/>
                                                    </span>
                                                </p>
                                            </div>
                                        </t>
                                    </td>
                                </tr>
                            </table>
                        </div>
                    </t>
                </t>
            </t>
        </template>
    </data>
</odoo>