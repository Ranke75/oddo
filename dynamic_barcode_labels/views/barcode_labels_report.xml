<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <template id="dynamic_barcode_labels_layout">
        <!-- Multicompany -->
        <t t-if="o and 'company_id' in o">
            <t t-set="company" t-value="o.company_id" />
        </t>
        <t t-if="not o or not 'company_id' in o">
            <t t-set="company" t-value="res_company" />
        </t>
        <div class="article">
          <t t-raw="0" />
        </div>
    </template>

    <template id="report_barcode_labels">
        <t t-call="web.html_container">
            <t t-foreach="doc_ids" t-as="doc">
                <t t-call="web.basic_layout">
                    <div class="page" align="center">
                        <!-- Product Name -->
                        <t t-set="product" t-value="request.env['product.product'].browse(doc.get('product_id'))"/>
                        <!-- Company Logo -->
                        <t t-set="company_id" t-value="request.env['res.company'].browse(data['form']['company_id'])"/>
                        <div t-if="data['form']['company_id']" align="left">
                            <img t-if="company_id.logo" t-att-src="'data:image/png;base64,%s' % company_id.logo" style="max-height: 45px;"/>
                        </div>
                        <!-- Product PART No -->
                        <div t-if="data['form']['product_code']" align="center" style="color:black;font-size:15px;">
                            <span><b>PART  NO</b></span>
                        </div>
                        <div t-if="data['form']['product_code']" align="center" style="color:black;font-size:15px;border: 2px solid black;">
                            <span t-field="product.default_code" />
                        </div>
                        <!-- Product SERIAL No -->
                        <span t-if="data['form']['lot']" >
                            <span t-if="doc.get('lot_number')">
                                 <div align="center" style="color:black;font-size:15px;">
                                    <span><b>SERIAL  NO</b></span>
                                </div>
                            </span>
                        </span>
                        <span t-if="data['form']['lot']" >
                            <span t-if="doc.get('lot_number')">
                                 <div align="center" style="color:black;font-size:15px;border: 2px solid black;">
                                    <span t-esc="doc.get('lot_number')"/>
                                </div>
                            </span>
                        </span>
                        <!-- Product Barcode -->
                        <div t-if="data['form']['barcode']"
                            style="color:black;margin-top:15px;font-size:9px;">
                            <img t-att-src="'/report/barcode/?type=%s&amp;value=%s&amp;width=%s&amp;height=%s&amp;humanreadable=%s' %(data['form']['barcode_type'], get_barcode_value(product[0], data), int(data['form']['display_width']), int(data['form']['display_height']), is_humanreadable(data))"/>
                        </div>

<!--                    <div t-if="data['form']['product_name']" align="center"
                            style="color:black;font-size:15px;">
                            <span t-field="product[0].name" />
                        </div> -->
    
                        <!-- Product Attributes -->
<!--                    <div t-if="data['form']['product_variant']"
                            align="center" style="color:black;font-size:10px;">
                            <span
                                t-esc="', '.join(map(lambda x: x.name, product[0].attribute_value_ids))" />
                        </div> -->

                        <!-- Product Lot -->
<!--                    <div t-if="data['form']['lot']" align="center"
                            style="color:black;font-size:10px;">
                            <span t-raw="product[1]" />
                        </div> -->
                        <!--Product Default Code -->
<!--                    <div t-if="data['form']['product_code']" align="center"
                            style="color:black;font-size:10px;">
                            <span t-field="product[0].default_code" />
                        </div> -->
                        <!--Barcode -->
<!--                    <div t-if="data['form']['barcode']"
                            style="color:black;">
                            span t-raw="get_barcode_string(product[0], data)" /
                            <img t-att-src="'/report/barcode/?type=%s&amp;value=%s&amp;width=%s&amp;height=%s&amp;humanreadable=%s' %(data['form']['barcode_type'], get_barcode_value(product[0], data), int(data['form']['display_width']), int(data['form']['display_height']), is_humanreadable(data))"/>
                        </div> -->
                        <!--Price-->
<!--                    <div t-if="data['form']['price_display']" style="color:black;font-size:15px;">
                            <t
                                t-if="data['form']['currency_position'] == 'before'">
                                <t t-if="data['form'].get('symbol')">
                                    <span t-esc="data['form']['symbol']" />
                                </t>
                            </t>
                            <span t-field="product[0].lst_price" />
                            <t
                                t-if="data['form']['currency_position'] == 'after'">
                                <t t-if="data['form'].get('symbol')">
                                    <span t-esc="data['form']['symbol']" />
                                </t>
                            </t>
                        </div> -->
                    </div>
                </t>
            </t>
        </t>
    </template>
</odoo>
